#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail

if [ -z "${PASSES-}" ]; then
	PASSES="fmt build e2e unittest"
fi

find_files() {
  find . -not \( \
      \( \
        -wholename './_output' \
        -o -wholename '*/vendor/*' \
      \) -prune \
    \) -name '*.go'
}

function fmt_pass {
	allfiles=$(find_files)
	echo "Checking gofmt..."
	for file in $allfiles; do
		checkRes=$(gofmt -l -s -d $file)
		if [ -n "${checkRes}" ]; then
			echo -e "gofmt checking failed:\n${checkRes}"
			exit 255
		fi
	done


	echo "Checking govet..."
	for file in $allfiles; do
		checkRes=$(go vet $file)
		if [ -n "${checkRes}" ]; then
			echo -e "go vet checking failed:\n${checkRes}"
			exit 255
		fi
	done
}

function build_pass {
	IMAGE=$OPERATOR_IMAGE hack/build/operator/build
}

function e2e_pass {
	TEST_PKGS=`go list ./test/e2e/... | grep -v framework`
	go test ${TEST_PKGS} -timeout 30m --race --kubeconfig $KUBERNETES_KUBECONFIG_PATH --operator-image $OPERATOR_IMAGE --namespace ${TEST_NAMESPACE}
}

function unittest_pass {
	TEST_PKGS=`go list ./pkg/...`
	go test ${TEST_PKGS} --race
}

for p in $PASSES; do
	${p}_pass
done

echo "test success ==="
